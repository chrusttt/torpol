<%= simple_form_for @norm, html: {class: 'form-inline'} do |f| %>
  <%= f.error_notification %>
	<%= f.error :base %>
  <div class="form-inputs">
    <%= f.input :index, placeholder: "Indeks" %>
    <%= f.input :name, placeholder: "Indeks" %>
  </div>
  <div id="quantities">
<%= f.simple_fields_for :quantities do |q| %>
	<%= render 'quantity_fields', f: q %>
<%end%>
<p class="links"><%= link_to_add_association "Dodaj", f, :quantities %></p>
</div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
